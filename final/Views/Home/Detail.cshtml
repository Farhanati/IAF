                                <div class="col-sm-5 space_all">
                                    <div class="exhibition_new_rl clearfix">
                                        <img src="~/image/@Session["Image"]" alt="abc" class="iw">
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="exhibition_new_rr clearfix">
                                        <h3>@Model.exp_owner</h3>
