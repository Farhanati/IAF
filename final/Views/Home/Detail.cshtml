                                <h4>@Model.exp_date - January - 2022</h4><br>
                                <img src="~/image/@Model.exp_img" alt="abc" class="iw">
                            </div>
                        </div>
                    </div>
                    <div class="exhibition_new clearfix">
                        <div class="col-sm-6 space_left">
                            <div class="exhibition_new_l clearfix">
                                <p>@Model.exp_discription</p>
                                <ul class="social_tag" style="margin-top:100px;">
                                    <li><a style="width:300px; margin-left:100px;" class="text-center" href="@Url.Action("Review", "Home")">Submit Review</a></li>
                                </ul>
                            

                            </div>
                        </div>
                        <div class="col-sm-6 space_all">
