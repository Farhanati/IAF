@model final.Models.review
<style>
    .btn {
    background-color:black;
    color:#fff;
    }
        .btn:hover {
            background-color: #e02626;
            color:#fff;
        }
</style>
@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <br />
    <h1 class="text-center">Your Opinions Matter</h1>
    <hr />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="form-group">
                    <h3>Leave A Comment : </h3>
                    <br />
                    @Html.EditorFor(model => model.r_comment, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.r_comment, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" style="margin-left:100px;" value="Submit Your Review" class="btn " />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/image/@Session["img "]" width="100%" />
            </div>





        </div>
    </div>
</div>
<br /><br /><br />
}
