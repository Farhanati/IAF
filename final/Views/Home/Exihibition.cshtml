@model IEnumerable<final.Models.expo>
    <style>
        .btn-lg {
            border: 2px solid #b91212;
            color: #fff;
            background-color: #b91212;
        font-style:normal;
            text-decoration: none;
        }
   
    </style>
<section id="exhibition">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="exhibition clearfix">
                    <div class="exhibition_1 clearfix">
                        <h1 class="text-center">EXIBHITIONS</h1>
                    </div>
                    @{
                        foreach (var item in ViewBag.one)
                        {
                            if (item.exp_status == "Available")
                            {
                                <div class="exhibition_2 clearfix">
                                    <div class="col-sm-5 space_left">
                                        <div class="exhibition_2_left clearfix">
                                            <div class="card-image clearfix"><a href="@Url.Action("Detail", "Home", new { @Id = item.exp_id })"><img src="~/image/@item.exp_img" width="100%"></a></div>
                                        </div>
                                    </div>
                                    <div class="col-sm-7">
                                        <div class="exhibition_2_right">
                                            <h2><a href="detail.html">@item.exp_owner: IFA</a></h2>
                                            <h4>@item.exp_date January 2022</h4>
                                            <p> @item.exp_discription</p>
                                            <h3><a href="@Url.Action("Detail", "Home", new { @Id = item.exp_id })">READ MORE</a></h3>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }
                        }
                    }
             
                <div class="exhibition_3 clearfix">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 exhibition_3_inner clearfix">
                                <h2>NEXT EVENTS</h2>
                            </div>
                            <div class="col-md-2 ml-auto">
                                <h5 class="text-right btn btn-lg"><a style="text-decoration:none; color:white" href="@Url.Action("Addproduct", "Home")">Upload Picture    <i class="fas fa-file-upload"></i></a></h5>

</div>
                        </div>
                    </div>
                    <div class="exhibition_3_inner_1 clearfix">
                        @{
                            foreach (var item in ViewBag.second)
                            {
                                if (item.exp_status == "Available")
                                {
                                    <div class="col-sm-4 space_left">
                                        <div class="exhibition_3_inner_1_inner">
                                            <div class="grid clearfix exhibition_3_inner_1_inner_image">
                                                <figure class="effect-marley">
                                                    <img src="~/image/@item.exp_img" width="100%" height="200px" alt="img12">
                                                    <figcaption>
                                                        <h2>IFA</h2>
                                                        <p>@item.exp_discription</p>
                                                        <a href="@Url.Action("Detail", "Home", new { @Id = item.exp_id })">View more</a>
                                                    </figcaption>
                                                </figure>
                                            </div>
                                            <div class="exhibition_3_inner_last clearfix">
                                                <h3><a href="@Url.Action("Detail", "Home", new { @Id = item.exp_id })">@item.exp_title</a></h3>
                                                <h4>@item.exp_date - January -2022</h4>
                                                <h5 class="text-right"><a href="@Url.Action("Detail", "Home", new { @Id = item.exp_id })">Read More</a></h5>
                                            </div>
                                        </div>
                                        <p>&nbsp;</p>
                                    </div>

                                }

                            }
                        }
                    </div>
                </div>
                </div>
           
            </div>
                </div>
            </div>
   
</section>
