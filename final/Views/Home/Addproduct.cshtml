@model final.Models.expo

@{
    ViewBag.Title = "Addproduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Addproduct", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <br />
    <h2 class="text-center">Add A Picture</h2>
    <hr />
    @Html.AntiForgeryToken()
    <div class="container" style="background-color: #F0F0F0">
        <div class="form-horizontal" style="background-color: #F0F0F0 ">
            <p>&nbsp;</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ">
                @Html.LabelFor(model => model.exp_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.exp_id, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Id", required = "required" } })
                    @Html.ValidationMessageFor(model => model.exp_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.exp_owner, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.exp_owner, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Owner", required = "required" } })
                    @Html.ValidationMessageFor(model => model.exp_owner, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.exp_title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.exp_title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Tittle", required = "required" } })
                    @Html.ValidationMessageFor(model => model.exp_title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.exp_discription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.exp_discription, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Discription", required = "required" } })
                    @Html.ValidationMessageFor(model => model.exp_discription, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.exp_date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.exp_date, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Exibhition Date (-January-2022)", required = "required" } })
                    @Html.ValidationMessageFor(model => model.exp_date, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.exp_img, htmlAttributes: new { @class = "control-label col-md-2", required = "required" })
                <div class="col-md-10">
                    <input type="file" name="file" class="input-group mb-3" />
                    @Html.ValidationMessageFor(model => model.exp_img, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.exp_status, htmlAttributes: new { @class = "control-label col-md-2", required = "required" })
                <div class="col-md-10">
                    @Html.RadioButtonFor(model => model.exp_status, "Available")
                    Start Exibhition
                    @Html.RadioButtonFor(model => model.exp_status, "Not available")
                    End Exibhition
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<div class="container" style="background-color: #F0F0F0">
    <div>
        @Html.ActionLink("Back to home Page", "Index")
    </div>
</div>
<hr />
<br />

