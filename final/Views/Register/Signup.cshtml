                <button class="btn"><a href="@Url.Action("Signup","Register")" style="text-decoration:none;color:none; cursor:pointer;" class="btn"> <i class="fas fa-user-circle"> Login / Sign up</i></a></button>
            </div>
        </div>
    </nav>
    <div class="main1">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign In</h2>
                        @using (Html.BeginForm("Signup", "Register", FormMethod.Post, new { @class = "register-form" }))
